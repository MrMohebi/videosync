{
  "name": "WatchSync",
  "version": "1.0.1",
  "description": "WatchSync is a browser extension that makes watching videos together easier.",
  "manifest_version": 3,
  "author": "MrM - MMMohebi",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WatchSync",
    "default_icon": {
      "16": "img/3d-glasses_inactive_16.png",
      "32": "img/3d-glasses_inactive_32.png",
      "64": "img/3d-glasses_inactive_64.png"
    }
  },
  "icons": {
    "16": "img/3d-glasses_active_16.png",
    "48": "img/3d-glasses_active_48.png",
    "128": "img/3d-glasses_active_128.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"]
}
